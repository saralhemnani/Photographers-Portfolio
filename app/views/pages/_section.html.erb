<section class="jumbotron text-center">
  <div class="container pt-4">
    <h1 id="heading-div" class="jumbotron-heading" data-message="<%= @values.heading %>">
      <span class='element'></span>
    </h1>
    <p class="lead text-muted"><%= @values.lead_text %></p>
    <p>
      <a href="mailto:<%= values.email %>" class="btn btn-primary my-2"><i class="bi bi-envelope-open-heart mx-1"></i><%= values.email %></a>
    </p>
  </div>
</section>
